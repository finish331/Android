<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.myapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Sex"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radGrpSex"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radBtnSex1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btnSex1" />

                <RadioButton
                    android:id="@+id/radBtnSex2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btnSex2" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Age"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/maleAge"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interest"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/interest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/music" />

            <CheckBox
                android:id="@+id/interest2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/song" />

            <CheckBox
                android:id="@+id/interest3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dance" />

            <CheckBox
                android:id="@+id/interest4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/travel" />

            <CheckBox
                android:id="@+id/interest5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/read" />

            <CheckBox
                android:id="@+id/interest6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/write" />

            <CheckBox
                android:id="@+id/interest7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/climb" />

            <CheckBox
                android:id="@+id/interest8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/swing" />

            <CheckBox
                android:id="@+id/interest9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food" />

            <CheckBox
                android:id="@+id/interest10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paint" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/button"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advice"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtInterest"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
